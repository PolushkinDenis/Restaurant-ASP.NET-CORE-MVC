<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @*<script src="~/Scripts/jquery-1.11.0.min.js"></script>
        <script src="~/Scripts/Script.js"></script>*@
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/Menu.css")
    @Styles.Render("~/Content/css/contact.css")

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/scripts/jquery-1.11.0.min.js")*@

    @Scripts.Render("~/scripts/jquery-3.4.1.js")

    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @*@Scripts.Render("~/Scripts/Script.js")*@

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("London", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Меню", "Index", "Home")</li>
                    <li>@Html.ActionLink("Добавить блюдо", "Form", "Home")</li>

                    @*<li>@Html.ActionLink("Связаться", "Contact", "Home")</li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - by Tigras</p>
        </footer>
    </div>

</body>
</html>
